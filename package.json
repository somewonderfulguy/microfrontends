{
  "name": "module-federation",
  "version": "1.0.0",
  "description": "module federation scaffolding",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "concurrently \"wsrun --parallel start\"",
    "init": "cd ./packages/shared && npm run build:rollup && cd ../sub-application && npm run build:rollup",
    "build": "npm run init && cd .packages/host && npm run build",
    "serve": "concurrently \"wsrun --parallel serve\"",
    "wipe": "rimraf node_modules packages/**/node_modules"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^7.2.2",
    "rimraf": "^3.0.2",
    "wsrun": "^5.2.4"
  }
}
